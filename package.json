{
  "name": "@chess960/board",
  "version": "1.0.0",
  "description": "A custom chess board component optimized for Chess960 (Fischer Random Chess)",
  "keywords": [
    "chess",
    "chess960",
    "fischer-random",
    "react",
    "react-component",
    "chess-board",
    "typescript"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeAndCoffeeGuy/chess960-board.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "example": "cd example && npm install && npm run dev",
    "example:build": "cd example && npm install && npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "chess.js": ">=1.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.5.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT"
}

